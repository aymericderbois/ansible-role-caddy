---
extends: default

ignore: |
  .venv/
  uv.lock
  pyproject.toml
  Makefile
  README.md
  .gitignore
  .github/

rules:
  line-length:
    max: 120
    level: warning
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
